<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.ProductList" BackgroundColor="LightSalmon"
             Title="ProductList">

        <Grid RowDefinitions="Auto,Auto,*">
        <Border Grid.Row="0" Margin="10" BackgroundColor="LightSalmon">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                <Label Text="Продукты" TextColor="White" FontSize="20" FontAttributes="Bold"> </Label>
            </StackLayout>
        </Border>
        <Button Grid.Row="1" Text="Добавление" Clicked="AddProduct_click" Background="LightCoral" TextColor="White" Margin="0,10,90,0" HorizontalOptions="Center"/>
        <Button Grid.Row="1" Text="Редактир." Clicked="EditProduct_click" Background="LightCoral" TextColor="White" Margin="130,10,0,0" HorizontalOptions="Center"/>
        <Button Grid.Row="1" Text="Удалить" Clicked="DeleteProduct_click" Background="LightCoral" TextColor="White" Margin="0,10,0,0" HorizontalOptions="End"/>
        <Button Grid.Row="1" Text="Категории" Clicked="Back_click" Background="LightCoral" TextColor="White" Margin="0,10,0,0" HorizontalOptions="Start"/>
        <ListView x:Name="ListViewProduct" ItemsSource="{Binding Product}" Grid.Row="2" HasUnevenRows="True" SelectionMode="Single" SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" BackgroundColor="Transparent">
            
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            
                            <Border Margin="10,5" BackgroundColor="White" >
                                
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="15">
                                
                                <StackLayout Grid.Column="1" Margin="10,0" Spacing="5">

                                    <Label Text="{Binding CategoryId}" FontSize="15" FontAttributes="Bold" TextColor="Black"></Label>
                                    <Label Text="{Binding Name}" FontSize="15" FontAttributes="Bold" TextColor="Black"></Label>
                                    <Label Text="{Binding Description} " FontSize="15" TextColor="Black"></Label>
                                    <StackLayout Orientation="Horizontal" Spacing="15">
                                        <Label Text="{Binding Price,StringFormat='{0:C}'}" FontSize="14" FontAttributes="Bold" TextColor="Black"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </Grid>
                                
                                
                            </Border>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        
       
      
  
    </Grid>
</ContentPage>