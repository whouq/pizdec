<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.AddCategory"
                        Title="AddCategory" Background="LightSalmon">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Border BackgroundColor="White" Padding="15" >
                <StackLayout Spacing="8">
                    <Label Text="Название категории" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
                    <Editor Text="{Binding CategoryHere.CategoryName}" Placeholder="Введите название категории" Background="White" HeightRequest="45"/>

                </StackLayout>
            </Border>
            <Border BackgroundColor="White" Padding="15" >
                <StackLayout Spacing="8">
                    <Label Text="Описание" FontSize="14" FontAttributes="Bold" TextColor="Black"></Label>
                    <Entry Text="{Binding CategoryHere.CategoryDescription}" Placeholder="Опишите категорию" HeightRequest="80"/>
                </StackLayout>
            </Border>
            
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Text="Сохранить" Clicked="Save_click" BackgroundColor="LightCoral" TextColor="White" HeightRequest="50" CornerRadius="10" Grid.Column="0"/>
                <Button Text="Закрыть" Clicked="Close_click" BackgroundColor="LightCoral" TextColor="White" HeightRequest="50" CornerRadius="10" Grid.Column="1"/>
                
            </Grid>
        </StackLayout>
    </ScrollView>

</ContentPage>