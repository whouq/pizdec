<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.AddProduct"
             Title="AddProduct" Background="LightSalmon">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            
           

            <Border BackgroundColor="White" Padding="15" >
            <StackLayout Spacing="8">
                    <Label Text="Название продукта" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="ProductNameEntry"  Text="{Binding ProductHere.Name}" Placeholder="Введите название продукта" Background="White" HeightRequest="45"/>

            </StackLayout>
            </Border>

            <Border BackgroundColor="White" Padding="15" >
                <StackLayout Spacing="8">
                    <Label Text="Описание" FontSize="14" FontAttributes="Bold" TextColor="Black"></Label>
                    <Entry x:Name="ProductDescriptionEntry"  Text="{Binding ProductHere.Description}" Placeholder="Опишите продукт" HeightRequest="80" />
                </StackLayout>
            </Border>
            <Border BackgroundColor="White" Padding="15" >
            <StackLayout Spacing="6">
                <Label Text="Цена" FontSize="14" FontAttributes="Bold" TextColor="Black"/>
                    <Entry  x:Name="ProductPriceEntry"  Text="{Binding ProductHere.Price}" Keyboard="Numeric" Placeholder="0.00" Background="Snow" HeightRequest="45"/>
            </StackLayout>
            </Border>
            
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Text="Сохранить" Clicked="Save_click" BackgroundColor="LightCoral" TextColor="White" HeightRequest="50" CornerRadius="10" Grid.Column="0"/>
                <Button Text="Закрыть" Clicked="Close_click" BackgroundColor="LightCoral" TextColor="White" HeightRequest="50" CornerRadius="10" Grid.Column="1"/>
                
            </Grid>
        </StackLayout>
    </ScrollView>
        
</ContentPage>